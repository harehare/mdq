{
  "name": "vscode-mq",
  "displayName": "mq support for Visual Studio Code",
  "description": "mq is a jq like tool for markdown processing. This extension adds support for the mq to Visual Studio Code.",
  "author": "harehare",
  "publisher": "harehare",
  "homepage": "https://harehare.github.io/mq/",
  "icon": "assets/logo.png",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "keywords": [
    "mq",
    "jq",
    "mq language",
    "extension",
    "intellisense",
    "autocompletion",
    "syntax-highlighting"
  ],
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mq"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mq",
        "extensions": [
          ".mq"
        ]
      }
    ]
  },
  "commands": [
    {
      "command": "mq-lsp.installLSP",
      "title": "mq: Install LSP"
    }
  ],
  "configuration": {
    "type": "object",
    "title": "LSP Configuration",
    "properties": {
      "mq-lsp.lspPath": {
        "type": "string",
        "default": "",
        "description": "Path to the LSP server executable"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.97.0",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "which": "^5.0.0"
  }
}
